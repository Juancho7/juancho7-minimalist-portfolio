---
import Section from "@/components/Section.astro";
import GitHub from "@/icons/GitHub.astro";

import { practiceProjects } from "@cv";
---

<div class="no-print">
  <Section title="Practice Projects">
    <ul>
      {
        practiceProjects.map(
          ({ url, description, highlights, name, isActive, repositoryUrl }) => (
            <li>
              <article>
                <header>
                  <div class="container">
                    <a href={repositoryUrl} target="_blank">
                      <GitHub />
                    </a>
                    <h3>
                      <a
                        href={url}
                        title={`Ver el proyecto ${name}`}
                        target="_blank"
                      >
                        {name}
                      </a>
                      {isActive && <span>&bull;</span>}
                    </h3>
                  </div>
                  <p>{description}</p>
                </header>
                <footer>
                  {highlights.map((highlight) => (
                    <span>{highlight}</span>
                  ))}
                </footer>
              </article>
            </li>
          ),
        )
      }
    </ul>
  </Section>
</div>

<style>
  .container {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  ul {
    margin-inline: -16px;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  article {
    height: 100%;
    padding: 16px;
    border: 1px solid #f2f2f2;
    display: flex;
    flex-direction: column;
    gap: 16px;
    border-radius: 8px;
  }

  article header {
    flex: 1;
  }

  article h3 {
    margin-bottom: 4px;
  }

  article a {
    color: #111;
  }

  article a:hover {
    text-decoration: underline;
  }

  article p {
    margin-bottom: 4px;
    font-size: 0.75rem;
    line-height: 1.2rem;
  }

  article h3 span {
    color: rgb(0, 188, 47);
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.6rem;
  }

  footer span {
    padding: 0.2rem 0.6rem;
    font-size: 0.6rem;
    font-weight: 500;
    color: #444;
    background-color: #eee;
    border-radius: 6px;
  }

  .github-code-link {
    margin-left: 5px;
  }

  @media (width <= 700px) {
    ul {
      margin-inline: 0px;
    }

    article {
      padding: 0 0 16px 0;
      border: none;
      box-shadow: 0 1px 1px #f2f2f2;
    }
  }
</style>
