---
import Section from "@/components/Section.astro";

import { certificates } from "@cv";
---

<Section title="Certificates">
  <ul>
    {
      certificates.map(({ name, date, duration, issuer, url }) => (
        <li>
          <article>
            <header>
              <a href={url} target="_blank">
                <h3>{name}</h3>
              </a>
              <p>{duration}</p>
            </header>
            <footer>
              <span>{issuer}, </span> <span>{date}</span>
            </footer>
          </article>
        </li>
      ))
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
  }

  li {
    border-bottom: 1px solid #eee;
  }

  header {
    display: flex;
    justify-content: space-between;
  }

  a:hover {
    color: #111;
    text-decoration: underline;
  }

  h3 {
    margin-bottom: 4px;
    font-size: 1.1rem;
    font-weight: 500;
    color: #111;
  }

  span {
    font-size: 0.8rem;
    color: #666;
  }
</style>
